<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>

        <!-- Head (containing meta tags) -->
        <referenceBlock name="head.additional">
            <block class="2023HK\Optimus\Block\Opengraph\General" name="opengraph.general" template="2023HK_Optimus::html/opengraph/general.phtml" />
        </referenceBlock>

        <!-- Footer (containing social) -->
        <referenceContainer name="footer" htmlClass="footer content colm-grid">
            <block class="2023HK\Optimus\Block\Html\Social" name="social" template="2023HK_Optimus::html/social.phtml" after="-" />
        </referenceContainer>

    </body>
</page>
